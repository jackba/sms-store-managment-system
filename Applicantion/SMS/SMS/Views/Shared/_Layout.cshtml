<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title </title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
            <div class="content-wrapper">
                <div class="float-left">
                    @Html.ActionLink(
                                        " ",
                                        "Index",
                                        "Home",
                                        null,
                                        new
                                        {
                                            style = "background: url('" + Url.Content("~/images/alfresco-logo.png") + "') no-repeat center right; display:block; height:82px; width:264px;"
                                        }
                                    )
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Quản lý kho", "QuanLyKho", "Home")</li>
                            <li>@Html.ActionLink("Bán hàng", "BanHang", "Home")</li>
                            <li>@Html.ActionLink("Danh mục", "DanhMuc", "Home")</li>
                            <li>@Html.ActionLink("Quản trị", "QuanTri", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
    </div>
    <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year Cửa hàng cung cấp trang thiết bị ngành nước</p>
                    <p>SMS - Store Management System</p>
                </div>
            </div>
        </footer>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
