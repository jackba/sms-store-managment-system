@model SMS.Models.NHA_CUNG_CAP

@{
    ViewBag.Title = "Thêm mới nhà cung cấp";
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Vui lòng kiểm tra lại các giá trị đã nhập!");
    <div>
        <fieldset>
            <div>
                @Html.LabelFor(u => u.TEN_NHA_CUNG_CAP)
            </div>
            <div>
                @Html.TextBoxFor(u => u.TEN_NHA_CUNG_CAP)
            </div>
            <div>
                @Html.LabelFor(u => u.DIA_CHI)
            </div>
            <div>
                @Html.TextAreaFor(u => u.DIA_CHI)
            </div>
            <div>
                @Html.LabelFor(u => u.SO_DIEN_THOAI)
            </div>
            <div>
                @Html.TextBoxFor(u => u.SO_DIEN_THOAI)
            </div>
            <div>
                @Html.LabelFor(u => u.EMAIL)
            </div>
            <div>
                @Html.TextBoxFor(u => u.EMAIL)
            </div>
            <div>
                @Html.LabelFor(u => u.TEN_NGUOI_LIEN_HE)
            </div>
            <div>
                @Html.TextBoxFor(u => u.TEN_NGUOI_LIEN_HE)
            </div>
            <div>
                @Html.LabelFor(u => u.GHI_CHU)
            </div>
            <div>
                @Html.TextAreaFor(u => u.GHI_CHU)
            </div>

            <div>
                <input type="submit" style="width:100px" value="Lưu" />
                <span> </span>
                <input type="button" style="width:100px" value="Làm lại" onclick="reset()" />
            </div>
        </fieldset>
    </div>
    <script>
        function reset() {
            window.location.reload();
            return false;
        }
    </script>


}
