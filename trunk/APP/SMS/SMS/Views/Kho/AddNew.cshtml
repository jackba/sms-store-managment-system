@model SMS.Models.KHO

@{
    ViewBag.Title = "Thêm mới kho";
    List<SelectListItem> theList = new List<SelectListItem>();
    SelectListItem item;
    foreach (var donvi in ViewBag.nguoiDungList)
    {
        item = new SelectListItem();
        item.Value = donvi.MA_NGUOI_DUNG + "";
        item.Text = donvi.TEN_NGUOI_DUNG;
        theList.Add(item);
    }
}



@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Vui lòng kiểm tra lại các giá trị đã nhập!");
    <div>
        <fieldset>
            <div>
                @Html.LabelFor(u => u.TEN_KHO)
            </div>
            <div>
                @Html.TextBoxFor(u => u.TEN_KHO)
            </div>
            <div>
                @Html.LabelFor(u => u.DIA_CHI)
            </div>
            <div>
                @Html.TextAreaFor(u => u.DIA_CHI)
            </div>
            <div>
                @Html.LabelFor(u => u.SO_DIEN_THOAI)
            </div>
            <div>
                @Html.TextBoxFor(u => u.SO_DIEN_THOAI)
            </div>
            <div>
                @Html.LabelFor(u => u.MA_NGUOI_DUNG_DAU)
            </div>
            <div>
                @Html.DropDownListFor(u => u.MA_NGUOI_DUNG_DAU, theList, "--------------- Chọn người đứng đầu kho ---------------")
            </div>
            <div>
                @Html.LabelFor(u => u.GHI_CHU)
            </div>
            <div>
                @Html.TextAreaFor(u => u.GHI_CHU)
            </div>

            <div>
                <input type="submit" style="width:100px" value="Lưu" />
                <span> </span>
                <input type="button" style="width:100px" value="Làm lại" onclick="reset()" />
            </div>
        </fieldset>
    </div>
    <script>
        function reset() {
            window.location.reload();
            return false;
        }
    </script>


}
