@{
    ViewBag.Title = "Sms Master";
}
<link href="~/Content/css/style.css" rel="stylesheet" type="text/css" />
<link href="~/Content/SmsMaster.css" rel="stylesheet" type="text/css" />
<script src="~/Content/js/jquery-1.9.1.js"></script>
<script src="~/Content/js/jquery-ui-1.10.3.custom.js"></script>
<script src="~/Content/js/jquery-ui-1.10.3.custom.min.js"></script>
<script src="../../Scripts/scrollTable.js" type="text/javascript"></script>
<h2>Sms Master</h2>
<h3 style="color:red">@ViewBag.Message</h3>
@using (Html.BeginForm("Index", "SmsMaster", FormMethod.Post, new { @id = "index" }))
{
    <div>
    <table style="width:100%">
        <tr>
            <td class="left" colspan="2">
                Số tiền nợ
            </td>
        </tr>
        <tr>
            <td class="center">
                Khách hàng công ty, công trình
            </td>
            <td class="right required">
                @Html.TextBox("MaxDebit1", ViewBag.MaxDebit1 as string, new { @class = "numberic" })
            </td>
        </tr>
        <tr>
            <td class="center">
                Khách hàng thân thiết
            </td>
            <td class="right required">
                @Html.TextBox("MaxDebit2", ViewBag.MaxDebit2 as string, new { @class = "numberic" })
            </td>
        </tr>
        <tr>
            <td class="center">
                Khách hàng thường
            </td>
            <td class="right required">
                @Html.TextBox("MaxDebit3", ViewBag.MaxDebit3 as string, new { @class = "numberic" })
            </td>
        </tr>
        <tr>
            <td class="left" colspan="2">
                Thời gian nợ
            </td>
        </tr>
        <tr>
            <td class="center">
                Khách hàng công ty, công trình
            </td>
            <td class="right required">
                @Html.TextBox("MaxMonth1", ViewBag.MaxMonth1 as string, new { @class = "int_numberic" })
            </td>
        </tr>
        <tr>
            <td class="center">
                Khách hàng thân thiết
            </td>
            <td class="right required">
                @Html.TextBox("MaxMonth2", ViewBag.MaxMonth2 as string, new { @class = "int_numberic" })
            </td>
        </tr>
        <tr>
            <td class="center">
                Khách hàng thường
            </td>
            <td class="right required">
                @Html.TextBox("MaxMonth3", ViewBag.MaxMonth3 as string, new { @class = "int_numberic" })
            </td>
        </tr>
    </table>

    <div>
        <input type="submit" style="width:100px" value="Lưu" />
        <span> </span>
        <input type="button" style="width:100px" value="Làm lại" onclick="reset()" />
    </div>
</div>
}


<script>
    function NumbericOnly(ctrl) {
        $(ctrl).keypress(function (key) {
            //getting key code of pressed key
            var keycode = (key.which) ? key.which : key.keyCode;
            //comparing pressed keycodes

            if (keycode > 31 && (keycode < 48 || keycode > 57) && keycode != 46) {
                alert(" You can enter only characters 0 to 9 ");
                return false;
            }
            else return true;
        });

    }
    function formatNumberic() {
        $('input.numberic').each(function () {
            $(this).val($(this).val().replace(/(\d)(?=(\d\d\d)+(?!\d))/g, "$1,"));
        });
    }
    $(document).ready(function () {
        formatNumberic();
        $('input.numberic').keypress(function (key) {
            var keycode = (key.which) ? key.which : key.keyCode;
            //comparing pressed keycodes

            if (keycode > 31 && (keycode < 48 || keycode > 57) && keycode != 46) {
                alert(" Hãy nhập ký tự số.");
                return false;
            }
            else return true;

        });
        $('input.int_numberic').keypress(function (key) {
            var keycode = (key.which) ? key.which : key.keyCode;
            //comparing pressed keycodes

            if (keycode > 31 && (keycode < 48 || keycode > 57)) {
                alert(" Hãy nhập ký tự số.");
                return false;
            }

            else return true;

        });
        $('input.int_numberic').keyup(function (key) {
            var $this = $(this);
            var value = $this.val();
            if (value > 36) {
                alert("Số tháng nợ nhỏ hơn 36");
                $this.val(36);
                return false;
            }
        });
        $('input.numberic').keyup(function (event) {
            // skip for arrow keys
            if (event.which >= 37 && event.which <= 40) {
                //event.preventDefault();
                return true;
            }
            var $this = $(this);
            var AmountWithCommas = $this.val();
            var DecimalSeparator = Number("1.2").toLocaleString().substr(1, 1);
            var arParts = String(AmountWithCommas).split(DecimalSeparator);

            var intPart = arParts[0];
            var decPart = (arParts.length > 1 ? arParts[1] : '');

            var num = intPart.replace(/,/gi, "").split("").reverse().join("");
            var num2 = RemoveRougeChar(num.replace(/(.{3})/g, "$1,").split("").reverse().join(""));
            if (decPart.length > 2) {
                decPart = (decPart + '00').substr(0, 2);
            }
            if (arParts.length > 1) {
                $this.val(num2 + DecimalSeparator + decPart);
            } else {
                $this.val(num2);
            }


        });
        $('input.numberic').bind("paste", function (e) {
            e.preventDefault();
        });
    });

    function RemoveRougeChar(convertString) {
        if (convertString.substring(0, 1) == ",") {
            return convertString.substring(1, convertString.length)
        }
        return convertString;
    }

    function reset() {
        window.location.reload();
        return false;
    }
</script>