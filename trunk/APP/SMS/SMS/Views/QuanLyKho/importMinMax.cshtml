@model SMS.Models.MinMax
@using PagedList.Mvc;

@{
    ViewBag.Title = "Khai báo dữ liệu tồn kho tối thiểu - tối đa";
}
<link href="~/Content/css/style.css" rel="stylesheet" type="text/css" />
<link href="~/Content/KhachHang.css" rel="stylesheet" type="text/css" />
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<script src="~/Content/js/jquery-1.9.1.js"></script>
<script src="~/Content/js/jquery-ui-1.10.3.custom.js"></script>
<script src="~/Content/js/jquery-ui-1.10.3.custom.min.js"></script>
<script src="../../Scripts/scrollTable.js" type="text/javascript"></script>
@section Scripts
{
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/themes/base/css")
    <script>
        $(document).ready(function () {
            $(document).ready(function () {
                $('.datePicker').datepicker({
                    dateFormat: 'dd/mm/yy',
                    changeMonth: true,
                    changeYear: true,
                    yearRange: "-60:+0"
                });
            });
        });
    </script>
}
<div style="background-color:lightgray; width:100%; padding-top:10px; padding-bottom:10px; padding-left: 5px;">
    <a href="@Url.Action("QuanLyKho", "Home")"> Quản lý kho </a> >
    <a href="@Url.Action("MinMaxOfProductByStore", "QuanLyKho")"> Danh sách tồn kho tối thiểu - tối đa </a>
    > @ViewBag.Title
</div>
<hgroup class="title">
    <h2> @ViewBag.Title</h2>
</hgroup>
<hr style="width:100%" />
<input type="hidden" value="@ViewBag.Message" id="hidenMessage" />
<div id="message" style="color:red; font-family:'Times New Roman'; font-size:16px;">

</div>
<div id="message" style="color:blue; font-family:'Times New Roman'; font-size:16px;">
    @if (!string.IsNullOrEmpty(ViewBag.InforMessage))
    {
        @ViewBag.InforMessage
        <hr />
    }
</div>
@using (Html.BeginForm("importMinMax", "QuanLyKho", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="control-group">
        <table>
            <tr>
                <td>
                    <label> Kho  </label>
                </td>
                <td class="required">
                    @if ((bool)Session["IsAdmin"])
                    {
                        @Html.DropDownListFor(u => u.Infor.MA_KHO, new SelectList(@Model.Stores, "MA_KHO", "TEN_KHO"), "-------------------- Chọn  kho ---------------------", new { @id = "storeId", style = "padding:5px;font-size:1.2em", @class = "required" })
                    }
                    else
                    {
                        @Html.DropDownListFor(u => u.Infor.MA_KHO, new SelectList(@Model.Stores, "MA_KHO", "TEN_KHO"), "-------------------- Chọn  kho ---------------------", new { @id = "storeId", @disabled = "disabled", @style = "padding:5px;font-size:1.2em", @class = "required" })
                    }
                </td>
            </tr>           
            <tr>
                <td>
                    <label>Chọn file</label>
                </td>
                <td class="required">
                    <input id="file" type="file" accept="csv" name="file" data-val="true" data-val-required="File is required" />
                </td>
            </tr>
        </table>
        <div class="controls">

        </div>
    </div>
    <input class="btn btn-primary" type="submit" value="Nhập kho" />
    <div style="clear:both"></div>
}


<script>
    $(document).ready(function () {
        var message = $("#hidenMessage").val();
        if (message != '') {
            $("#message").append(message);
            $("#message").append("<hr />");
        }
    });
</script>