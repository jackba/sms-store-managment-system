@model SMS.Models.GetInventoryModel
@using PagedList.Mvc;

<div>

    <table width="100%">
        <tr>
            <td>
                <div style="text-align:left; padding-top:3px;">
                    <label>@ViewBag.Count sản phầm </label>
                </div>
            </td>
            <td>
                <div style="text-align: right;  padding-top: 3px; ">
                 @Html.PagedListPager(Model.InventoryList, currentPageIndex => Url.Action("InventoryPagingConent",
                                                            new { 
                                                                currentPageIndex, 
                                                                StoreId = ViewBag.StoreId, 
                                                                ProductId = ViewBag.ProductId,
                                                                productGroupId = ViewBag.ProductGroupId,
                                                                StoreName = ViewBag.StoreName,
                                                                ProductName = ViewBag.ProductName
                                                            }),
            PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(
            new AjaxOptions()
            {
                HttpMethod = "POST",
                InsertionMode = InsertionMode.Replace,
                LoadingElementId = "resultLoadingDiv",
                UpdateTargetId = "mainDiv"
            }
    ))
                </div>
            </td>
        </tr>

    </table>

    <table width="100%">
        <tr style="width:100%">
            <td class='inner colwidth head ' width="10%"> Mã sản phẩm </td>
            <td class='inner colwidth head '> Tên sản phẩm </td>
            <td class='inner colwidth head '> Đơn vị </td>
            <td class='inner colwidth head '>  Tồn kho  </td>
            <td class='innerLast colwidth head '>  Giá trị </td>
        </tr>
        @foreach (var dbHist in Model.InventoryList)
        {
            <tr class="inner column-hscroll alignCenter">
                <td class="inner colwidth">
                    @dbHist.MA_SAN_PHAM
                </td>
                <td class="inner colwidth"> @dbHist.TEN_SAN_PHAM</td>
                <td class="inner colwidth"> @dbHist.TEN_DON_VI</td>
                <td class="inner colwidth numberic">@dbHist.SO_LUONG_TON.ToString("0,0.00")</td>
                <td class="innerLast colwidth numberic">@dbHist.VALUE.ToString("0,0.00")</td>
            </tr>
        }
        <tr class="inner column-hscroll alignCenter">
            <td class="inner colwidth" style="background-color:lightgray" colspan="4">
                Tổng giá trị hàng tồn tính theo giá hiện hành (đơn giá 1)
            </td>
            <td class="innerLast colwidth numberic" style="background-color:lightgray">
                @Model.VALUE.ToString("0,0.00")
            </td>
        </tr>
    </table>


    <table width="100%">
        <tr>
            <td>
                <div style="text-align:left; padding-top:3px;">
                    <label>@ViewBag.Count sản phầm </label>
                </div>
            </td>
            <td>
                <div style="text-align: right;  padding-top: 3px; ">
                    @Html.PagedListPager(Model.InventoryList, currentPageIndex => Url.Action("InventoryPagingConent",
                                                            new
                                                            {
                                                                currentPageIndex,
                                                                StoreId = ViewBag.StoreId,
                                                                ProductId = ViewBag.ProductId,
                                                                productGroupId = ViewBag.ProductGroupId,
                                                                StoreName = ViewBag.StoreName,
                                                                ProductName = ViewBag.ProductName
                                                            }),
            PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(
            new AjaxOptions()
            {
                HttpMethod = "POST",
                InsertionMode = InsertionMode.Replace,
                LoadingElementId = "resultLoadingDiv",
                UpdateTargetId = "mainDiv"
            }
    ))
                </div>
            </td>
        </tr>

    </table>

</div>