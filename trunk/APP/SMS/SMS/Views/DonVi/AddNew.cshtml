@model SMS.Models.DON_VI_TINH
 
@{
    ViewBag.Title = "Thêm mới đơn vị tính";
 }
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Vui lòng kiểm tra lại các giá trị đã nhập!");
    <div>
        <fieldset>
            <div>
                @Html.LabelFor(u => u.TEN_DON_VI)
            </div>
            <div> 
                @Html.TextBoxFor(u => u.TEN_DON_VI)
            </div>
            <div>
                @Html.LabelFor(u => u.GHI_CHU)
            </div>
            <div> 
                @Html.TextAreaFor(u => u.GHI_CHU)
            </div>
            
            <div>
                <input type = "submit"  style ="width:100px" value = "Lưu"/>
                <span> </span>
                <input  type = "button" style ="width:100px" value = "Làm lại" onclick = "reset()"/>
            </div>
        </fieldset>
    </div>     
    <script >
        function reset() {
            var name = document.getElementById("TenDonVi");
            var note = document.getElementById("GhiChu");
            name.value = "";
            note.value = "";
            return false;
        }
    </script>   
    
            
}
