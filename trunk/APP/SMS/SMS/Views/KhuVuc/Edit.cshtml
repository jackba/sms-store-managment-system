@model SMS.Models.KHU_VUC

@{
    ViewBag.Title = "Sửa khu vực";
}
<div style="background-color:lightblue; width:100%; padding-top:10px; padding-bottom:10px; padding-left: 5px;">
    <a href="@Url.Action("DanhMuc", "Home")"> Danh mục </a> >
    <a href="@Url.Action("Index", "KhuVuc")"> Danh sách khu vực </a>
    > @ViewBag.Title
</div>
<br />
<hgroup class="title">
    <h2> @ViewBag.Title</h2>
</hgroup>
<br />
<hr style="width:100%" />

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Vui lòng kiểm tra lại các giá trị đã nhập!");
    <div>
        <fieldset>

            <div>
                @Html.HiddenFor(u => u.MA_KHU_VUC)

            </div>

            <div>
                @Html.LabelFor(u => u.TEN_KHU_VUC)
            </div>
            <div>
                @Html.TextBoxFor(u => u.TEN_KHU_VUC)
            </div>
            <div>
                @Html.LabelFor(u => u.GHI_CHU)
            </div>
            <div>
                @Html.TextAreaFor(u => u.GHI_CHU)
            </div>

            <div>
                <input type="submit" style="width:100px" value="Lưu" />
                <span> </span>
                <input type="button" style="width:100px" value="Trở về" onclick="window.location.href='@Url.Action("Index","KhuVuc")'" />
            </div>
        </fieldset>
    </div>


}
