@model SMS.Models.NHOM_SAN_PHAM

@{
    ViewBag.Title = "Sửa nhóm sản phẩm";
}
<div style="background-color:lightgray; width:100%; padding-top:10px; padding-bottom:10px; padding-left: 5px;">
    <a href="@Url.Action("DanhMuc", "Home")"> Danh mục </a> >
    <a href="@Url.Action("Index", "NhomSanPham")"> Danh sách nhóm sản phẩm </a>
    > Sửa đơn vị tính
</div>
<br />
<hgroup class="title">
    <h2> @ViewBag.Title</h2>
</hgroup>
<br />
<hr style="width:100%"/>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Vui lòng kiểm tra lại các giá trị đã nhập!");
    <div>
        <fieldset>

            <div>
               @Html.HiddenFor(u => u.MA_NHOM)
               
            </div>

            <div>
                @Html.LabelFor(u => u.TEN_NHOM)
            </div>
            <div>
                @Html.TextBoxFor(u => u.TEN_NHOM)
            </div>
            <div>
                @Html.LabelFor(u => u.GHI_CHU)
            </div>
            <div>
                @Html.TextAreaFor(u => u.GHI_CHU)
            </div>

            <div>
                <input type="submit" style="width:100px" value="Lưu" />
                <span> </span>
                <input type="button" style="width:100px" value="Trở về" onclick="window.location.href='@Url.Action("Index","NhomSanPham")'" />
            </div>
        </fieldset>
    </div>
}
