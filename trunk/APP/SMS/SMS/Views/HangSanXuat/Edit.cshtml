@model SMS.Models.NHA_SAN_XUAT

@{
    ViewBag.Title = "Sửa thông tin hãng sản xuất";
}
<div style="background-color:lightgray; width:100%; padding-top:10px; padding-bottom:10px; padding-left: 5px;">
    <a href="@Url.Action("DanhMuc", "Home")"> Danh mục </a> > 
    <a href="@Url.Action("Index", "HangSanXuat")"> Danh sách hãng sản xuất </a>
    > Sửa thông tin hãng sản xuất
</div>
<br />
<hgroup class="title">
    <h2> @ViewBag.Title</h2>
</hgroup>
<br />
<hr style="width:100%" />
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Vui lòng kiểm tra lại các giá trị đã nhập!");
    <div>
        <fieldset>

            <div>
                @Html.HiddenFor(u => u.MA_NHA_SAN_XUAT)

            </div>

            <div>
                @Html.LabelFor(u => u.TEN_NHA_SAN_XUAT)
            </div>
            <div>
                @Html.TextBoxFor(u => u.TEN_NHA_SAN_XUAT)
            </div>
            <div>
                @Html.LabelFor(u => u.GHI_CHU)
            </div>
            <div>
                @Html.TextAreaFor(u => u.GHI_CHU)
            </div>

            <div>
                <input type="submit" style="width:100px" value="Lưu" />
                <span> </span>
                <input type="button" style="width:100px" value="Trở về" onclick="window.location.href='@Url.Action("Index","HangSanXuat")'" />
            </div>
        </fieldset>
    </div>
    <script>
        function reset() {
            window.location.reload();
            return false;
        }
    </script>


}
