@model SMS.Models.EXPENS

@{
    ViewBag.Title = "Chi tiêu";


    List<SelectListItem> kinds = new List<SelectListItem>();
    SelectListItem kind;
    kind = new SelectListItem();
    kind.Value = "1";
    kind.Text = "Mua hàng";
    kinds.Add(kind);

    kind = new SelectListItem();
    kind.Value = "2";
    kind.Text = "Vận chuyển";
    kinds.Add(kind);

    kind = new SelectListItem();
    kind.Value = "3";
    kind.Text = "Lương nhân viên";
    kinds.Add(kind);
    kind = new SelectListItem();
    kind.Value = "4";
    kind.Text = "Chi phí khác";
    kinds.Add(kind);
}

<div style="background-color:lightgray; width:100%; padding-top:10px; padding-bottom:10px; padding-left: 5px;">
    <a href="@Url.Action("DanhMuc", "Home")"> Danh mục </a> >
    <a href="@Url.Action("Index", "DonVi")"> Danh sách đơn vị tính </a>
    > Thêm mới đơn vị tính
</div>
<hgroup class="title">
    <h2> @ViewBag.Title</h2>
</hgroup>

<hr style="width:100%" />
@using (Html.BeginForm("", "", FormMethod.Post, new { @id = "mainfrom" }))
{
    <div>
        <fieldset>
            <div>
                @Html.LabelFor(u => u.LOAI_CHI)
            </div>
            <div>
               @Html.DropDownListFor(u => u.LOAI_CHI, kinds, new { style = "padding:5px;font-size:1.2em" })
            </div>
            <div>
                @Html.LabelFor(u => u.TEN_NGUOI_NHAN)
            </div>
            <div>
                @Html.TextBoxFor(u => u.TEN_NGUOI_NHAN)
            </div>
            <div>
                @Html.LabelFor(u => u.NGAY_CHI)
            </div>
            <div>
                @Html.TextBoxFor(u => u.NGAY_CHI, new { @class = "datePicker" })
            </div>
            <div>
                @Html.LabelFor(u => u.TONG_CHI)
            </div>
            <div>
                @Html.TextBoxFor(u => u.TONG_CHI, new { @class = "numberic" })
            </div>
            <div>
                @Html.LabelFor(u => u.GHI_CHU)
            </div>
            <div>
                @Html.TextAreaFor(u => u.GHI_CHU)
            </div>

            <div>
                <input type="submit" style="width:100px" value="Lưu" />
                <span> </span>
                <input type="button" style="width:100px" value="Trở về" onclick="window.location.href='@Url.Action("Index", "DonVi")'" />
            </div>
        </fieldset>
    </div>
    <script>
        function reset() {
            var name = document.getElementById("TenDonVi");
            var note = document.getElementById("GhiChu");
            name.value = "";
            note.value = "";
            return false;
        }

    </script>


}
