@model SMS.Models.ImportCsvModel
@using PagedList.Mvc;

@{
    ViewBag.Title = "Danh sách khách hàng cần thu nợ";
}
<link href="~/Content/css/style.css" rel="stylesheet" type="text/css" />
<link href="~/Content/KhachHang.css" rel="stylesheet" type="text/css" />
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<script src="~/Content/js/jquery-1.9.1.js"></script>
<script src="~/Content/js/jquery-ui-1.10.3.custom.js"></script>
<script src="~/Content/js/jquery-ui-1.10.3.custom.min.js"></script>
<script src="../../Scripts/scrollTable.js" type="text/javascript"></script>
@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/themes/base/css")
    <script>
        $(document).ready(function () {
            $("#SearchString").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: "/KhachHang/Find", data: "{ 'prefixText': '" + request.term + "' }",
                        dataType: "json", type: "POST", contentType: "application/json; charset=utf-8",
                        dataFilter: function (data) { return data; }, success:
                            function (data) {
                                response($.map(data, function (item) {
                                    return {
                                        label: item.value,
                                        value: item.value,
                                        id: item.id
                                    }
                                }))
                            }, error: function (XMLHttpRequest, textStatus, errorThrown) { alert(textStatus); }
                    });
                },
                select: function (event, ui) {
                    $('#SearchString').val(ui.item.label);
                    return false;
                },
                minLength: 1
            });
            $('#mainForm').submit();
        });
    </script>
}
<div style="background-color:lightgray; width:100%; padding-top:10px; padding-bottom:10px; padding-left: 5px;">
    <a href="@Url.Action("BanHang", "Home")"> Bán Hàng </a>
    >  Danh sách khách hàng cần thu nợ
</div>
<br />
<hgroup class="title">
    <h2> Danh sách khách hàng cần thu nợ </h2>
</hgroup>
<br />
    
@using (Html.BeginForm("importCsv", "Import", FormMethod.Post, new { enctype = "multipart/form-data" }))
{    
    <hr style="width:100%" />
    <h2>Import Using CSV</h2>
      <div class="control-group">
        <div class="controls">
            <input id="file" type="file" accept="csv" name="file" data-val="true" data-val-required="File is required" />
        </div>
      </div>
    <input class="btn btn-primary" type="submit" value="Import" />
    <div style="clear:both"></div>
    <hr style="width:100%" />
    <div>
    <table border="1" cellpadding="0" cellspacing="0" style="width:100%" id="MainTable">
        <tr>
            <td class='inner colwidth head ' width="5%">
                No
            </td>
            <td class='inner colwidth head ' width="10%">
                CODE
            </td>
            <td class='inner colwidth head ' width="10%">
                Mã sản phẩm
            </td>
            <td class='inner colwidth head ' width="25%">
                Tên Sản phẩm
            </td>
            <td class='inner colwidth head '  width="7%">
                Tên đơn vị 
            </td>
            <td class='innerLast colwidth head ' title="Nhân viên thực hiện" width="15%">
                Số lượng
            </td>
            <td class='innerLast colwidth head ' title="Nhân viên thực hiện" width="15%">
                Đơn giá
            </td>
        </tr>
        
        @if (Model != null && Model.TheList != null)
        { 
        foreach (var dbHist in Model.TheList)
        {
            <tr class='inner column-hscroll alignCenter'>
                <td class="inner colwidth" width="5%;">
                    @dbHist.No
                </td>
                <td class="inner colwidth">
                    @dbHist.Code
                </td>
                <td class="inner colwidth">
                    @dbHist.Id
                </td>                
                <td class="inner colwidth">
                    @dbHist.Name
                </td>
                <td class="inner colwidth">
                    @dbHist.UniName
                </td>
                <td class="innerLast colwidth">
                    @dbHist.Quantity
                </td>
                <td class="innerLast colwidth">
                    @dbHist.Price
                </td>
            </tr>
        }        
        }
    </table>
</div>
}
