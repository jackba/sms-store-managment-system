@model SMS.Models.ImportReportModel
@using PagedList.Mvc;

@{
    ViewBag.Title = "Danh sách hóa đơn nhập kho";
}
@{
    List<SelectListItem> kinds = new List<SelectListItem>();
    SelectListItem ckind;


    ckind = new SelectListItem();

    ckind.Value = "-1";
    ckind.Text = "----------- Chọn loại nhập kho ----------";
    kinds.Add(ckind);

    ckind = new SelectListItem();
    if ((int)ViewBag.InputKind == 0)
    {
        ckind.Selected = true;
    }
    ckind.Value = "0";
    ckind.Text = "Nhập mua hàng";
    kinds.Add(ckind);

    ckind = new SelectListItem();
    if ((int)ViewBag.InputKind == 1)
    {
        ckind.Selected = true;
    }
    ckind.Value = "1";
    ckind.Text = "Nhập lại hàng trả";
    kinds.Add(ckind);

    ckind = new SelectListItem();
    if ((int)ViewBag.InputKind == 2)
    {
        ckind.Selected = true;
    }
    ckind.Value = "2";
    ckind.Text = "Kiểm kho";
    kinds.Add(ckind);

    ckind = new SelectListItem();
    if ((int)ViewBag.InputKind == 3)
    {
        ckind.Selected = true;
    }
    ckind.Value = "3";
    ckind.Text = "Nhập chuyển kho";
    kinds.Add(ckind);
}
<div style="background-color:lightgray; width:100%; padding-top:10px; padding-bottom:10px; padding-left: 5px;">
    <a href="@Url.Action("Import", "Home")"> Quản lý kho - nhập kho </a>
    > @ViewBag.Title

    <br />
</div>
<br />
<hgroup class="title">
    <h2> @ViewBag.Title </h2>
</hgroup>
<h3>@ViewBag.Message</h3>

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<link href="~/Content/css/style.css" rel="stylesheet" type="text/css" />
<link href="~/Content/KhachHang.css" rel="stylesheet" type="text/css" />
<script src="~/Content/js/jquery-1.9.1.js"></script>
<script src="~/Content/js/jquery-ui-1.10.3.custom.js"></script>
<script src="~/Content/js/jquery-ui-1.10.3.custom.min.js"></script>
<script src="../../Scripts/scrollTable.js" type="text/javascript"></script>
<br />
@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/themes/base/css")
    <script>
        $(document).ready(function () {
            $("#ProductName").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: "/SanPham/FindSuggest", data: "{ 'prefixText': '" + request.term + "' }",
                        dataType: "json", type: "POST", contentType: "application/json; charset=utf-8",
                        dataFilter: function (data) { return data; }, success:
                            function (data) {
                                response($.map(data, function (item) {
                                    return {
                                        label: item.value,
                                        value: item.value,
                                        id: item.id
                                    }
                                }))
                            }, error: function (XMLHttpRequest, textStatus, errorThrown) { alert(textStatus); }
                    });
                    $('#ProductId').val("");
                },
                select: function (event, ui) {
                    $('#ProductName').val(ui.item.label);
                    $('#ProductId').val(ui.item.id);
                    return false;
                },
                minLength: 1

            });

            $("#StoreName").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: "/Kho/FindSuggest", data: "{ 'prefixText': '" + request.term + "' }",
                        dataType: "json", type: "POST", contentType: "application/json; charset=utf-8",
                        dataFilter: function (data) { return data; }, success:
                            function (data) {
                                response($.map(data, function (item) {
                                    return {
                                        label: item.value,
                                        value: item.value,
                                        id: item.id
                                    }
                                }))
                            }, error: function (XMLHttpRequest, textStatus, errorThrown) { alert(textStatus); }
                    });
                },
                select: function (event, ui) {
                    $('#StoreName').val(ui.item.label);
                    $('#StoreId').val(ui.item.id);
                    return false;
                },
                minLength: 0

            }).focus(function () {
                $(this).autocomplete('search', '');
            });

        });

        $(document).ready(function () {
            $('.datePicker').datepicker({
                dateFormat: 'dd/mm/yy',
                changeMonth: true,
                changeYear: true,
                yearRange: "-60:+0"
            });
        });
    </script>
    <style type="text/css">
        .required:after {
            content: "*";
            font-weight: bold;
            color: red;
        }
    </style>

}
@using (Html.BeginForm("ImportRepoterDetail", "QuanLyKho", FormMethod.Post, new { @id = "index" }))
{
    <hr style="width:100%" />
    <div style="float:left">
        Loại nhập : @Html.DropDownList("kind", kinds, new { @id = "kind", @style = "padding:2px;font-size:1.2em; " })
        <br />
        Cửa hàng  : @Html.TextBox("StoreName", ViewBag.StoreName as string, new { id = "StoreName" })
        @Html.Hidden("StoreId", new { id = "StoreId" })
        <br />
        @Html.Hidden("ProductId", new { id = "ProductId" })
        Sản phẩm: @Html.TextBox("ProductName", ViewBag.ProductName as string, new { id = "ProductName" })
    </div>
    <div style="float:left">
        Ngày Mua: @Html.TextBox("fromDate", ViewBag.FromDate as DateTime?, new { @class = "datePicker" }) ~ @Html.TextBox("toDate", ViewBag.ToDate as DateTime?, new { @class = "datePicker" })
        <input type="submit" value="Tìm kiếm" class="myButton" />
    </div>
    <div style="clear:both"></div>
    <hr style="width:100%" />
    <div style="clear:both"></div>
    <div>
        <table width="100%">
            <tr style="width:100%">
                <td class='inner colwidth head '> Số hóa đơn </td>
                <td class='inner colwidth head '> Ngày nhập kho </td>
                <td class='inner colwidth head '>  Người nhập kho  </td>
                <td class='inner colwidth head '>  Kho nhập </td>
                <td class='innerLast colwidth head '>  Nhà cung cấp </td>
                <td class='innerLast colwidth head '>  Sửa </td>
                <td class='innerLast colwidth head '>  Xóa </td>
            </tr>
            @foreach (var dbHist in Model.ImportList)
            {
                <tr class="inner column-hscroll alignCenter">
                    <td class="inner colwidth" title="Xem chi tiết hóa đơn nhập kho">
                        <a href="@Url.Action("ShowDetail", "Import", new { id = @dbHist.MA_NHAP_KHO })" class="button-module">
                            @dbHist.SO_HOA_DON
                        </a>
                    </td>
                    <td class="inner colwidth">
                        @{
                            DateTime date = (DateTime)@dbHist.NGAY_NHAP;
                
                        }
                        @date.ToString("dd/MM/yyyy")
                    </td>
                    <td class="inner colwidth">
                        @dbHist.TEN_NGUOI_DUNG
                    </td>
                    <td class="inner colwidth">
                        @dbHist.TEN_KHO
                    </td>
                    <td class="innerLast colwidth">
                        @dbHist.TEN_NHA_CUNG_CAP
                    </td>
                    <td class='innerLast alignCenter' style="width:50px;">
                        <a href="@Url.Action("Edit", "Import", new { id = @dbHist.MA_NHAP_KHO })" class="button-module">
                            <img width="18" height="18" alt="edit" src="~/Content/images/edit-icon.png"></img>
                        </a>
                    </td>
                    <td class='innerLast alignCenter' style="width:50px;">
                        <a href="@Url.Action("Delete", "Import", new { id = @dbHist.MA_NHAP_KHO })" class="button class="button-module" onclick="return deleteSubmit()">
                            <img width="18" height="18" alt="edit" src="~/Content/images/edit_delete.png"></img>
                        </a>
                    </td>

                </tr>
            }
        </table>
        <table width="100%">
            <tr>
                <td>
                    <div style="text-align:left; padding-top:3px;">
                        <label>@Model.PageCount lượt nhập kho </label>
                    </div>
                </td>
                <td>
                    <div style="text-align: right;  padding-top: 3px; ">
                        @Html.PagedListPager(Model.ImportList, page => Url.Action("ImportRepoterDetail",
                         new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
                    </div>
                </td>
            </tr>

        </table>
    </div>
}
