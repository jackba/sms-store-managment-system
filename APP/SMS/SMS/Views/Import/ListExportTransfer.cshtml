@model SMS.Models.ImportReportModel
@using PagedList.Mvc;

@{
    ViewBag.Title = "Danh sách hóa đơn nhập kho";
}
@{
    
    List<SelectListItem> theImportStoreList = new List<SelectListItem>();
    SelectListItem item;
    if (ViewBag.Stores != null)
    {
        foreach (var donvi in ViewBag.Stores)
        {
            item = new SelectListItem();
            item.Value = donvi.MA_KHO + "";
            item.Text = donvi.TEN_KHO;
            if ((int)ViewBag.ExportStoreId == donvi.MA_KHO)
            {
                item.Selected = true;
            }
            theImportStoreList.Add(item);
        }
    }
    
    List<SelectListItem> kinds = new List<SelectListItem>();
    SelectListItem ckind;


    ckind = new SelectListItem();

    ckind.Value = "0";
    ckind.Text = "----------- Chọn trạng thái của phiếu chuyển kho ----------";
    kinds.Add(ckind);

    ckind = new SelectListItem();
    if ((int)ViewBag.InputKind == 0)
    {
        ckind.Selected = true;
    }
    ckind.Value = "1";
    ckind.Text = "Đang chờ xuất kho";
    kinds.Add(ckind);

    ckind = new SelectListItem();
    if ((int)ViewBag.InputKind == 1)
    {
        ckind.Selected = true;
    }
    ckind.Value = "2";
    ckind.Text = "Đã xuất - đang chờ nhập kho";
    kinds.Add(ckind);

    ckind = new SelectListItem();
    if ((int)ViewBag.InputKind == 2)
    {
        ckind.Selected = true;
    }
    ckind.Value = "3";
    ckind.Text = "Đã nhập kho";
    kinds.Add(ckind);
}
<div style="background-color:lightgray; width:100%; padding-top:10px; padding-bottom:10px; padding-left: 5px;">
    <a href="@Url.Action("Import", "Home")"> Quản lý kho - nhập kho </a>
    > @ViewBag.Title

    <br />
</div>
<br />
<hgroup class="title">
    <h2> @ViewBag.Title </h2>
</hgroup>
<h3>@ViewBag.Message</h3>

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<link href="~/Content/css/style.css" rel="stylesheet" type="text/css" />
<link href="~/Content/KhachHang.css" rel="stylesheet" type="text/css" />
<script src="~/Content/js/jquery-1.9.1.js"></script>
<script src="~/Content/js/jquery-ui-1.10.3.custom.js"></script>
<script src="~/Content/js/jquery-ui-1.10.3.custom.min.js"></script>
<script src="../../Scripts/scrollTable.js" type="text/javascript"></script>
<br />
@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/themes/base/css")
    <script>
        $(document).ready(function () {
            $("#ProductName").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: "/SanPham/FindSuggest", data: "{ 'prefixText': '" + request.term + "' }",
                        dataType: "json", type: "POST", contentType: "application/json; charset=utf-8",
                        dataFilter: function (data) { return data; }, success:
                            function (data) {
                                response($.map(data, function (item) {
                                    return {
                                        label: item.value,
                                        value: item.value,
                                        id: item.id
                                    }
                                }))
                            }, error: function (XMLHttpRequest, textStatus, errorThrown) { alert(textStatus); }
                    });
                    $('#ProductId').val("");
                },
                select: function (event, ui) {
                    $('#ProductName').val(ui.item.label);
                    $('#ProductId').val(ui.item.id);
                    return false;
                },
                minLength: 1
            });

            $("#StoreName").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: "/Kho/FindSuggest", data: "{ 'prefixText': '" + request.term + "' }",
                        dataType: "json", type: "POST", contentType: "application/json; charset=utf-8",
                        dataFilter: function (data) { return data; }, success:
                            function (data) {
                                response($.map(data, function (item) {
                                    return {
                                        label: item.value,
                                        value: item.value,
                                        id: item.id
                                    }
                                }))
                            }, error: function (XMLHttpRequest, textStatus, errorThrown) { alert(textStatus); }
                    });
                },
                select: function (event, ui) {
                    $('#StoreName').val(ui.item.label);
                    $('#StoreId').val(ui.item.id);
                    return false;
                },
                minLength: 1
            });
            $('#mainForm').submit();
        });

        $(document).ready(function () {
            $('.datePicker').datepicker({
                dateFormat: 'dd/mm/yy',
                changeMonth: true,
                changeYear: true,
                yearRange: "-60:+0"
            });
        });
    </script>
    <style type="text/css">
        .required:after {
            content: "*";
            font-weight: bold;
            color: red;
        }
    </style>

}
@using (Ajax.BeginForm("IndexPartialView", "Import", new AjaxOptions()
{
    HttpMethod = "POST",
    InsertionMode = InsertionMode.Replace,
    LoadingElementId = "resultLoadingDiv",
    UpdateTargetId = "mainDiv"
},
                           new { @id = "mainForm" }
                      ))
{

    <hr style="width:100%" />
    <table>
        <tr>
            <td>
                Loại nhập :
            </td>
            <td>
                @Html.DropDownList("status", kinds, new { @id = "status", @style = "padding:2px;font-size:1.2em; " })
            </td>
        </tr>
        @if ((bool)Session["IsAdmin"])
        {
            <tr>
                <td>
                    Kho - Cửa hàng xuất:
                </td>
                <td>
                    @Html.DropDownList("exportStoreId", theImportStoreList, "Chọn kho", new { @id = "importStoreId", style = "padding:5px;font-size:1.2em", @class = "required", @disabled = "disabled" })
                </td>
            </tr>
                    
            <tr>
                <td>
                    Cửa hàng nhập:
                </td>
                <td>
                    
                </td>
            </tr>
        }

        <tr>
            <td>
                Nhân viên xuất :
            </td>
            <td>
                @Html.Hidden("ProviderId", ViewBag.ProviderId as int?, new { id = "ProductId" })
                @Html.TextBox("ProviderName", ViewBag.ProviderName as string, new { id = "ProviderName" })
            </td>
        </tr>
        <tr>
            <td>
                Ngày xuất:
            </td>
            <td>
                @Html.TextBox("fromDate", ViewBag.FromDate as DateTime?, new { @class = "datePicker" }) ~ @Html.TextBox("toDate", ViewBag.ToDate as DateTime?, new { @class = "datePicker" })

            </td>
        </tr>
    </table>

    <div style="float:left">
        <input type="submit" value="Tìm kiếm" class="myButton" />
    </div>

    <div style="clear:both"></div>
}
