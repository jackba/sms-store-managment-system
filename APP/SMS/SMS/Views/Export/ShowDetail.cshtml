@model SMS.Models.ExportedDetailModel

@using PagedList.Mvc;
@using PagedList;

@{
    ViewBag.Title = "Chi tiết phiếu xuất kho";
}
<script src="~/Content/js/FileSaver.js"></script>
<link href="../../Content/PagedList.css" rel="stylesheet" type="text/css" />
<link href="../../Content/style.css" rel="stylesheet" type="text/css" />
<script src="~/Scripts/jquery-1.7.1.min.js"></script>
<script src="../../Scripts/scrollTable.js" type="text/javascript"></script>
<link href="~/Content/Import.css" rel="stylesheet" />
@if (Model.flg == 1)
{
    <div style="background-color:lightblue; width:100%; padding-top:10px; padding-bottom:10px; padding-left: 5px;">
        <a href="@Url.Action("QuanLyKho", "Home")"> Quản lý kho </a> >
        <a href="@Url.Action("Export", "Home")"> Xuất kho </a> >
        <a href="@Url.Action("SaleExportList", "Export")"> Danh sách phiếu xuất kho bán lẻ </a> >
        @ViewBag.Title
    </div>
}
else if (Model.flg == 2)
{
    <div style="background-color:lightblue; width:100%; padding-top:10px; padding-bottom:10px; padding-left: 5px;">
        <a href="@Url.Action("QuanLyKho", "Home")"> Quản lý kho </a> >
        <a href="@Url.Action("Export", "Home")"> Xuất kho </a> >
        <a href="@Url.Action("ListExportTransfer", "Import")"> Danh sách phiếu xuất chuyển kho </a>
        > @ViewBag.Title
    </div>
}
else if (Model.flg == 3)
{
    <div style="background-color:lightblue; width:100%; padding-top:10px; padding-bottom:10px; padding-left: 5px;">
        <a href="@Url.Action("QuanLyKho", "Home")"> Quản lý kho </a> >
        <a href="@Url.Action("Export", "Home")"> Xuất kho </a> >
        <a href="@Url.Action("ExportCancelList", "Export")"> Danh sách phiếu xuất hủy </a>
        > @ViewBag.Title
    </div>
}
else if (Model.flg == 4)
{
    <div style="background-color:lightblue; width:100%; padding-top:10px; padding-bottom:10px; padding-left: 5px;">
        <a href="@Url.Action("QuanLyKho", "Home")"> Quản lý kho </a> >
        <a href="@Url.Action("Export", "Home")"> Xuất kho </a> >
        <a href="@Url.Action("WaitingExport2Provider", "Export")"> Danh sách phiếu xuất trả hàng nhà cung cấp </a>
        > @ViewBag.Title
    </div>
}

<h2>@ViewBag.Title </h2>

<hr />

<table width="100%" id="tblExport" name="tblExport" class="listView">
    <tr>
        <td class='inner colwidth head '> STT </td>
        <td class='inner colwidth head '> Tên sản phẩm </td>
        <td class='inner colwidth head '>  Số lượng</td>
        <td class='inner colwidth head '>  Đơn vị </td>
        <td class='innerLast colwidth head '>  Kho xuất </td>
    </tr>
    @{
        int i = 0;
        foreach (var dbHist in Model.thelist)
        {
            i++;
            <tr class="inner column-hscroll alignCenter">
                <td class="inner">
                    @i
                </td>
                <td class="inner alignLeft">
                    @dbHist.TEN_SAN_PHAM
                </td>
                <td class="inner numberic">
                    @Double.Parse(dbHist.SO_LUONG.ToString()).ToString("#,###")
                </td>
                <td class="inner">
                    @dbHist.TEN_DON_VI
                </td>
                <td class="innerLast">
                    @dbHist.TEN_KHO_XUAT
                </td>
            </tr>
        }
    }
</table>
