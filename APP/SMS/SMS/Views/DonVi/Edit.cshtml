@model SMS.Models.DON_VI_TINH

@{
    ViewBag.Title = "Sửa đơn vị tính";
}
<h2>  @ViewBag.Title </h2>
<hr style="width:100%"/>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Vui lòng kiểm tra lại các giá trị đã nhập!");
    <div>
        <fieldset>

            <div>
               @Html.HiddenFor(u => u.MA_DON_VI)
               
            </div>

            <div>
                @Html.LabelFor(u => u.TEN_DON_VI)
            </div>
            <div>
                @Html.TextBoxFor(u => u.TEN_DON_VI)
            </div>
            <div>
                @Html.LabelFor(u => u.GHI_CHU)
            </div>
            <div>
                @Html.TextAreaFor(u => u.GHI_CHU)
            </div>

            <div>
                <input type="submit" style="width:100px" value="Lưu" />
                <span> </span>
                <input type="button" style="width:100px" value="Trở về" onclick="window.location.href='@Url.Action("Index","DonVi")'" />
            </div>
        </fieldset>
    </div>
}
