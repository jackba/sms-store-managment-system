            total = 0;
            allTotal = 0;
        }
        @foreach (var detail in Model.detailList)
        {
            i++;
            total = detail.SO_LUONG_TEMP * detail.DON_GIA_TEMP - detail.SO_LUONG_TEMP * detail.DON_GIA_TEMP * detail.PHAN_TRAM_CHIEC_KHAU / 100;
