            <td colspan="4" class="innerLast" style="background-color:lightgray">Tồng hóa đơn</td>
            <td style="background-color:lightgray" class="innerLast">@allTotal.ToString("#,###.##")</td>
        </tr>
    </table>
    <hr />
    <table style="width: 100%; text-align: center">
