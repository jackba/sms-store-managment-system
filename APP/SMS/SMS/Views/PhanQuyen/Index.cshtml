@model SMS.Models.RoleModel
@using PagedList.Mvc;

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<link href="~/Content/css/style.css" rel="stylesheet" type="text/css" />
<link href="~/Content/KhachHang.css" rel="stylesheet" type="text/css" />
<script src="~/Content/js/jquery-1.9.1.js"></script>
<script src="~/Content/js/jquery-ui-1.10.3.custom.js"></script>
<script src="~/Content/js/jquery-ui-1.10.3.custom.min.js"></script>
<script src="../../Scripts/scrollTable.js" type="text/javascript"></script>

@{
    ViewBag.Title = "Danh mục phân quyền người dùng";
}

<h2>@ViewBag.Title </h2>

<hr style="width:100%" />

@using (Html.BeginForm("Index", "PhanQuyen", FormMethod.Post))
{
    <div style="float:right">
        <p>
            Từ khóa tìm kiếm: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
            <input type="submit" value="Tìm kiếm" class="myButton" />
            @{
    if ((bool)Session["IsAdmin"] == true || (bool)Session["IsMetadataManager"] == true)
    {
        <input type="button" value="Thêm Mới" class="myButton" onclick="window.location.href='@Url.Action("AddNew","PhanQuyen")'" />
    }
            }
        </p>

    </div>
    <div style="clear:both"></div>
    <hr style="width:100%" />
    
    <table width="100%">
            <tr style="width:100%">
                <td class='innerLast colwidth head '> Tên nhóm / Người dùng </td>
                <td class='innerLast colwidth head '> Quyền Admin </td>
                <td class='innerLast colwidth head '>  Quyền kế toán </td>
                <td class='innerLast colwidth head '>  Quyền bán hàng </td>
                <td class='innerLast colwidth head '>  Quyền quản lý kho </td>
                <td class='innerLast colwidth head '>  Quyền danh mục </td>
                <td class='innerLast colwidth head '>  Sửa </td>
            </tr>
        @foreach (var dbHist in Model.RoleList)
        {
            <tr class="inner column-hscroll alignCenter">
                <td class="inner colwidth" title="Xem chi tiết hóa đơn nhập kho">
                    <a href="@Url.Action("ShowDetail", "Import", new { id = @dbHist.ID })" class="button-module">
                        @dbHist.TEN_NGUOI_DUNG
                    </a>
                </td>
                
                    @{
                        if (dbHist.IS_ADMIN != null && (bool)dbHist.IS_ADMIN)
                        {
                            <td class="inner colwidth" style="background-color:blue"> </td>
                        }
                        else
                        {
                            <td class="inner colwidth" style="background-color:red"> </td>
                        }
                        if (dbHist.IS_ACCOUNTING != null && (bool)dbHist.IS_ACCOUNTING)
                        {
                            <td class="inner colwidth" style="background-color:blue"> </td>
                        }
                        else
                        {
                            <td class="inner colwidth" style="background-color:red"> </td>
                        }
                         if (dbHist.IS_SALER != null && (bool)dbHist.IS_SALER)
                        {
                            <td class="inner colwidth" style="background-color:blue"> </td>
                        }
                        else
                        {
                            <td class="inner colwidth" style="background-color:red"> </td>
                        }
                         if (dbHist.IS_STORE_MANAGER != null && (bool)dbHist.IS_STORE_MANAGER)
                        {
                            <td class="inner colwidth" style="background-color:blue"> </td>
                        }
                        else
                        {
                            <td class="inner colwidth" style="background-color:red"> </td>
                        } if (dbHist.IS_METADATA_MANAGER != null && (bool)dbHist.IS_METADATA_MANAGER)
                        {
                            <td class="inner colwidth" style="background-color:blue"> </td>
                        }
                        else
                        {
                            <td class="inner colwidth" style="background-color:red"> </td>
                        }
                     }
                
                <td class='innerLast alignCenter' style="width:50px;">
                    @{
                        if (dbHist.STATUS != 1)
                        {
                             <a href="@Url.Action("Edit", "Import", new { id = @dbHist.ID })" class="button-module">
                                    <img width="18" height="18" alt="edit" src="~/Content/images/edit-icon.png"></img>
                                </a>
                        }
                    }
                   
                </td>
            </tr>
        }
        <tr>
            <td colspan="2" >
                <div style="text-align:left; padding-top:3px;">
                    <label>@Model.PageCount lượt phân quyền </label>
                </div>
            </td>
            <td colspan="5" >
                <div style="text-align: right;  padding-top: 3px; ">
                    @Html.PagedListPager(Model.RoleList, page => Url.Action("ImportRepoterDetail",
                         new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
                    </div>
</td>
        </tr>
    </table>
}
<script>
    function deleteSubmit() {
        var r = confirm("Bạn muốn xóa phân quyền này!");
        if (r == true) {
            document.forms[0].submit();
        }
        else {
            return false;
        }
    }
</script>
