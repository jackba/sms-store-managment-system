@model SMS.Models.HoaDonBHModel
@using PagedList.Mvc;

@{
    ViewBag.Title = "Danh sách các phiếu trả hàng";
}
<div style="background-color:lightgray; width:100%; padding-top:10px; padding-bottom:10px; padding-left: 5px;">
    <a href="@Url.Action("Return", "Home")"> Xử lý hàng trả </a> > @ViewBag.Title
</div>

<br />

<hgroup class="title">
    <h2>@ViewBag.Title</h2>
</hgroup>
<h3 style="color:red">@ViewBag.Message</h3>
<h3 style="color:blue">@ViewBag.InforMessage</h3>
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<link href="~/Content/css/style.css" rel="stylesheet" type="text/css" />
<link href="~/Content/KhachHang.css" rel="stylesheet" type="text/css" />
<script src="~/Content/js/jquery-1.9.1.js"></script>
<script src="~/Content/js/jquery-ui-1.10.3.custom.js"></script>
<script src="~/Content/js/jquery-ui-1.10.3.custom.min.js"></script>
<script src="../../Scripts/scrollTable.js" type="text/javascript"></script>
<br />
@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/themes/base/css")
    <script>
        $(document).ready(function () {

            $("#customerName").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: "/KhachHang/Find", data: "{ 'prefixText': '" + request.term + "' }",
                        dataType: "json", type: "POST", contentType: "application/json; charset=utf-8",
                        dataFilter: function (data) { return data; }, success:
                            function (data) {
                                response($.map(data, function (item) {
                                    return {
                                        label: item.value,
                                        value: item.value,
                                        id: item.id
                                    }
                                }))
                            }, error: function (XMLHttpRequest, textStatus, errorThrown) { alert(textStatus); }
                    });
                    $('#customerId').val("");
                },
                select: function (event, ui) {
                    $('#customerName').val(ui.item.label);
                    $('#customerId').val(ui.item.id);
                    return false;
                },
                minLength: 1
            });

            $("#userName").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: "/HoaDon/FindExported", data: "{ 'prefixText': '" + request.term + "' }",
                        dataType: "json", type: "POST", contentType: "application/json; charset=utf-8",
                        dataFilter: function (data) { return data; }, success:
                            function (data) {
                                response($.map(data, function (item) {
                                    return {
                                        label: item.value,
                                        value: item.value,
                                        id: item.id
                                    }
                                }))
                            }, error: function (XMLHttpRequest, textStatus, errorThrown) { alert(textStatus); }
                    });
                    $('#userId').val("");
                },
                select: function (event, ui) {
                    $('#userName').val(ui.item.label);
                    $('#userId').val(ui.item.id);
                    return false;
                },
                minLength: 1
            });
            $('#fromDate').datepicker('setDate', 'today');
            $('#mainForm').submit();
        });
        $(document).ready(function () {
            $('.datePicker').datepicker({
                dateFormat: 'dd/mm/yy',
                changeMonth: true,
                changeYear: true,
                yearRange: "-60:+0"
            });
        });
        function deleteSubmit() {
            var r = confirm("Bạn muốn hủy phiếu xuất kho này?");
            if (r == true) {
                document.forms["mainForm"].submit();
            }
            else {
                return false;
            }
        }
    </script>
    <style type="text/css">
        .required:after {
            content: "*";
            font-weight: bold;
            color: red;
        }
    </style>

}
@using (Ajax.BeginForm("ReturnPurchaseListPartialView", "TraHang", new AjaxOptions()
                            {
                                HttpMethod = "POST",
                                InsertionMode = InsertionMode.Replace,
                                LoadingElementId = "resultLoadingDiv",
                                UpdateTargetId = "mainDiv"
                            },
                           new { @id = "mainForm" }
                      ))
{
    <hr style="width:100%" />
    <div style="float:left">
        <table>
                <tr>
                    <td>
                        @Html.Hidden("userId", ViewBag.BillId as int?, new { id = "userId" })
                        Số hóa đơn:
                    </td>
                    <td>
                        @Html.TextBox("userName", ViewBag.BillCode as string, new { id = "userName" })
                    </td>
                </tr>

            <tr>
                <td>
                    @Html.Hidden("customerId", ViewBag.CustomerId as int?, new { id = "customerId" })
                    Khách hàng:
                </td>
                <td>
                    @Html.TextBox("customerName", ViewBag.CustomerName as string, new { id = "customerName" })
                </td>
            </tr>

            <tr>
                <td>
                    Ngày bán hàng:
                </td>
                <td>
                    @Html.TextBox("fromDate", ViewBag.FromDate as DateTime?, new { @class = "datePicker", @id = "fromDate" }) ~ @Html.TextBox("toDate", ViewBag.ToDate as DateTime?, new { @class = "datePicker", @id = "toDate" })
                </td>
            </tr>
        </table>
        <input type="submit" value="Tìm kiếm" class="myButton" />
    </div>
    <div style="clear:both"></div>
    <hr style="width:100%" />
}
<div style="clear:both"></div>
<div id="resultLoadingDiv" style="border: none; display: none; z-index: 99; text-align: center; position: absolute; margin-left: 390px; ">
    <img src="/Content/images/loading-2.gif" />
</div>
<div id="mainDiv">

</div>
