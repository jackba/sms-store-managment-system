<link href="../../Content/css/style.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "BÁN HÀNG";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>CỬA HÀNG TRANG THIẾT BỊ NGÀNH NƯỚC</h1>
                <br />
                <h2> SMS - Store Managemanet System </h2>
            </hgroup>
        </div>
    </section>
}
<hgroup class="title">
    <h2>@ViewBag.Message</h2>
</hgroup>
<div class="grid_7">

    <a class="dashboard-module" href="@Url.Action("Index", "KhachHang")">
        <img width="64" height="64" alt="edit" src="../../Content/images/customer.png"></img>
        <span>DANH SÁCH KHÁCH HÀNG</span>
    </a>

    <a class="dashboard-module" href="@Url.Action("LapHoaDon", "BanHang")">
        <img width="64" height="64" alt="edit" src="../../Content/images/buycart.png"></img>
        <span>BÁN HÀNG</span>
    </a>
@{
    if (Convert.ToBoolean(Session["IsAdmin"]) || Convert.ToBoolean(Session["IsAccounting"]))
    {
        <a class="dashboard-module" href="@Url.Action("Collection", "HoaDon")">
            <img width="64" height="64" alt="edit" src="../../Content/images/charge.png"></img>
            <span>THU TIỀN</span>
        </a>
    }}
    <a class="dashboard-module" href="@Url.Action("Index", "HoaDon")">
        <img width="64" height="64" alt="edit" src="../../Content/images/bill.png"></img>
        <span>DANH SÁCH HÓA ĐƠN</span>
    </a>
    <a class="dashboard-module" href="@Url.Action("Index", "TraHang")">
        <img width="64" height="64" alt="edit" src="../../Content/images/refund.png"></img>
        <span>NHẬN TRẢ HÀNG - CÓ HÓA ĐƠN</span>
    </a>

    <a class="dashboard-module" href="#">
        <img width="64" height="64" alt="edit" src="../../Content/images/refund.png"></img>
        <span>NHẬN TRẢ HÀNG - KHÔNG HÓA ĐƠN</span>
    </a>


    <a class="dashboard-module" href="@Url.Action("ReturnPurchaseList", "TraHang")">
        <img width="64" height="64" alt="edit" src="../../Content/images/refund.png"></img>
        <span>DANH SÁCH CÁC PHIẾU TRẢ HÀNG</span>
    </a>

    

    @{
        if (Convert.ToBoolean(Session["IsAdmin"]) || Convert.ToBoolean(Session["IsAccounting"]))
        {
            <a class="dashboard-module" href="#">
                <img width="64" height="64" alt="edit" src="../../Content/images/provider_back.png"></img>
                <span>TRẢ HÀNG CHO NHÀ CUNG CẤP</span>
            </a>
        
            <a class="dashboard-module" href="@Url.Action("Warning", "KhachHang")">
                <img width="64" height="64" alt="edit" src="../../Content/images/cus_warning.png"></img>
                <span>DANH SÁCH KHÁCH HÀNG - WARNING</span>
            </a>
        }
    }
    
</div>